<div class="book-wrap">
  <% @books.each do |book| %>
    <div class="book-box">
      <span class="book-title"><%= book.title %></span>
      <span class="book-body"><%= book.body %></span>
      <%= link_to "Show", book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm"=> "Are you sure?" %>
    </div>
  <% end %>
</div>

<h2>New Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラー
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Books' %>
<% end %>
